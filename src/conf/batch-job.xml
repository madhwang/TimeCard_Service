<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	">
 
	<import resource="classpath:batch-database.xml"/>
	<import resource="classpath:batch-context.xml"/>
	
	<batch:job id="timeStatsJob">
	  <batch:step id="step1">
		<batch:tasklet>
			<batch:chunk transaction-manager="transactionManager"  reader="timeRecordReader" writer="timeRecordWriter"  commit-interval="10">
			</batch:chunk>
		</batch:tasklet>
	  </batch:step>
	</batch:job>
</beans>